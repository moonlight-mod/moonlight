{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2024"],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "node16",

    "strict": true,
    "skipLibCheck": true,
    "declaration": true,

    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
