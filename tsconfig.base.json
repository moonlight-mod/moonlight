{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",

    "strict": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "declaration": true,

    "noEmit": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "**/result/**"]
}
